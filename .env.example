# Database (MySQL) - set these from Railway MySQL plugin
DB_HOST=your-mysql-host
DB_PORT=3306
DB_NAME=student_management
DB_USER=your_mysql_user
DB_PASS=your_mysql_password

# App environment
NODE_ENV=production

# Session / Cookie secrets (use strong random values in production)
SESSION_SECRET=replace_with_strong_random_value
COOKIE_PASSWORD=replace_with_strong_random_value

# Optional secrets
JWT_SECRET=replace_with_jwt_secret

# Optional pool tuning
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000
